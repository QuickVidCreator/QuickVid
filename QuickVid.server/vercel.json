{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/*",
      "use": "@vercel/static"
    }
  ],
  "functions": {
    "api/*": {
      "includeFiles": [ "node_modules/ffmpeg-static/ffmpeg" ]
    }
  },
  "routes": [
    {
      "src": "/public/timer.mp3",
      "dest": "/public/timer.mp3"
    },
    {
      "src": "/public/TruenoBlack-mBYV.otf",
      "dest": "/public/TruenoBlack-mBYV.otf"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    }
  ]
}
